
@model LoginViewModel;


@{
    ViewBag.title = "Home";
    var userName = "";
    if (ViewBag.UserName != null)
    {
        userName = ViewBag.UserName;
    }
}

<div class="d-flex justify-content-center p-5" style="height: 80vh">
    @*<button class="btn btn-outline-primary" style="text-align:left; position:absolute; left:0;top:10px;">&lArr; &nbsp; Home</button>*@
    <div class="col-4 container">
        <h1>LOG IN</h1>
        <div class="text-danger">
            <div asp-validation-summary="ModelOnly"> </div>
        </div>
        <form method="post" asp-action="Login" asp-controller="Account">
            @*<div>Welcome @userName</div>*@
            <div class="mb-3">
                <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <span asp-validation-for="Email"></span>
            <div class="mb-3">
                <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <span asp-validation-for="Password"></span>
            <input hidden asp-for="ReturnUrl"/>
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
            <p> Don't have an account yet? <a asp-action="Register" asp-controller="Account" class="pl-3"> Sign up here</a></p>
            <a asp-action="PasswordRecovery" asp-controller="Account">Forgot Password?</a>
        </form>

    </div>

</div>

